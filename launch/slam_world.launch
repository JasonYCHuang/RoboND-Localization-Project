<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="world" default="empty"/> 
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find udacity_bot)/worlds/kitchen_dining.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!--robot description-->
  <include file="$(find udacity_bot)/launch/slam/robot_description.launch"/>

  <!--spawn a robot in gazebo world-->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -param robot_description -model slam_bot"/>

  <!--teleop-->
  <include file="$(find udacity_bot)/launch/slam/teleop.launch"/>

  <!--mapping-->
  <include file="$(find udacity_bot)/launch/slam/mapping.launch"/>

  <!--launch rviz-->
  <include file="$(find udacity_bot)/launch/slam/rviz.launch"/>

</launch>
